{
	"id":"com.moimz.imodule.module.keyword",
	"icon":"fa-keyboard-o",
	"title":{
		"ko":"키워드관리"
	},
	"version":"3.0.0",
	"description":{
		"ko":"홈페이지에서 검색되는 키워드와 관련된 전반적인 기능을 관리합니다."
	},
	"author":{
		"name":"Arzz",
		"email":"arzz@arzz.com"
	},
	"homepage":"https://www.imodule.kr",
	"versionChecker":"http://www.moimz.com/ko/api/moimz/getLatest",
	"dependencies":{
		"core":"3.0.0"
	},
	"language":"ko",
	"admin":true,
	"context":false,
	"global":true,
	"article":false,
	"databases":{
		"keyword_table":{
			"columns":{
				"keyword":{
					"type":"varchar",
					"length":30,
					"comment":"키워드"
				},
				"keycode":{
					"type":"varchar",
					"length":60,
					"comment":"자동완성코드"
				},
				"hit":{
					"type":"int",
					"length":11,
					"default":0,
					"comment":"검색수"
				},
				"latest_search":{
					"type":"int",
					"length":11,
					"default":0,
					"comment":"마지막검색시각"
				}
			},
			"indexes":{
				"keyword":"primary_key",
				"keycode":"index"
			},
			"comment":"키워드 테이블"
		}
	}
}